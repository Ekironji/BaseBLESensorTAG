<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="15dip"
    android:orientation="vertical"
    android:background="#ffffff">
   
    
    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="12sp" />

<!--     BATTERIA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">  
        
	    <LinearLayout
	        android:id="@+id/batteryLayout"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:padding="10dip"
	        android:layout_margin="5dip"
	        android:orientation="vertical" 
	        android:background="#5522a565"
	        android:layout_weight="0.55">  
	     
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Battery"
		        android:textSize="12sp"/>       
	    	<TextView
		        android:id="@+id/bat_textView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/empty1"/>
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:padding="10dip"
	        android:layout_margin="5dip"
	        android:orientation="vertical" 
	        android:background="#dddd00"
	        android:layout_weight="0.5">   
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Button"
		        android:textSize="12sp"/>       
		    <TextView
		        android:id="@+id/but_textView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/empty1"/>
	    </LinearLayout>
	</LinearLayout>
    
<!-- 	ACCELEROMETRO e MAGNETOMETRO  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">  

	    <LinearLayout
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:padding="10dip"
	        android:layout_margin="5dip"
	        android:orientation="vertical" 
	        android:background="#5522a565"
	        android:layout_weight="0.33">  
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Accelerometer"
		        android:textSize="12sp"/>       
	    	<TextView
		        android:id="@+id/acc_textView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/empty3"/>
	    </LinearLayout>
	    	           
	    <LinearLayout
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:padding="10dip"
	        android:layout_margin="5dip"
	        android:orientation="vertical" 
	        android:background="#5522a565"
	        android:layout_weight="0.33">   
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Magnetometer"
		        android:textSize="12sp"/>   
		    <TextView
		        android:id="@+id/mag_textView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/empty3"/>
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:padding="10dip"
	        android:layout_margin="5dip"
	        android:orientation="vertical" 
	        android:background="#5522a565"
	        android:layout_weight="0.33">   
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Gyroscope"
		        android:textSize="12dip"/>  
		    <TextView
		        android:id="@+id/gyr_textView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/empty3"/>
	    </LinearLayout>
	    
    </LinearLayout>
       
<!-- GIROSCOPIO e BOTTONE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="170dip" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fizzicon" />

        </RelativeLayout>
	    
	</LinearLayout>
    
    
    <!-- LED E BEEP -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">  
        
	    <RelativeLayout
		    android:id="@+id/rgbLayout"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:padding="10dip"
	        android:layout_margin="5dip"
	        android:orientation="horizontal" 
	        android:background="#55000000"
		    android:layout_weight="0.5">   
	        
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="RGB Led"
		        android:textSize="12dip"/>
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" >
		
		        <ImageButton
		            android:id="@+id/rgbButton"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/rainbow"
		            android:background="@null"
		            android:scaleType="fitCenter" />
	
		    </LinearLayout>
		</RelativeLayout>   
		
		 
	    <LinearLayout
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:padding="10dip"
	        android:layout_margin="5dip"
	        android:orientation="vertical" 
	        android:background="#55ff6600"
		    android:layout_weight="0.5">   
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Beeper"
		        android:textSize="12sp"/>
			    
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >

		        <ImageButton
		            android:id="@+id/lowToneButton"
		            android:layout_width="wrap_content"
		            android:layout_height="50dip"
		            android:src="@drawable/bellsmall"
		            android:scaleType="fitCenter"
		    		android:layout_weight="0.5"
		    		android:background="@null" />

		        <ImageButton
		            android:id="@+id/highToneButton"
		            android:layout_width="wrap_content"
		            android:layout_height="50dip"
		            android:src="@drawable/bellbbig" 
		            android:scaleType="fitCenter"
		    		android:layout_weight="0.5"
		    		android:background="@null" />

			</LinearLayout>
	    </LinearLayout>
    </LinearLayout>
	
</LinearLayout>
